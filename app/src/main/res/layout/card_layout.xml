<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="335dp"
    android:layout_height="447dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="350dp"
            android:layout_height="450dp"
            android:layout_margin="20dp"
            android:background="@drawable/card"
            tools:ignore="MissingConstraints"/>

        <ImageView
            android:id="@+id/profile_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/profile_photo"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/circle_border"/>

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="90dp"
            android:text="Название группы"
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/publish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="90dp"
            android:text="только что"
            android:textSize="12sp"
            android:textColor="@color/gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_marginTop="90dp"
                android:layout_height="0dp"
                tools:ignore="Suspicious0dp" />

            <ImageView
                android:id="@+id/post_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitCenter"
                android:src="@drawable/sample"/>

            <TextView
                android:id="@+id/post_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:paddingHorizontal="10dp"
                android:paddingTop="15dp"
                android:text="post text"/>
        </LinearLayout>

        <!-- Количество лайков -->
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="425dp"
            android:alpha="0.7"
            android:src="@drawable/gray_likes" />
        <TextView
            android:id="@+id/likes_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="425dp"
            android:text="1234"/>

        <!-- Количество комментариев -->
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="425dp"
            android:alpha="0.7"
            android:src="@drawable/gray_comments" />
        <TextView
            android:id="@+id/comments_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="425dp"
            android:text="1234"/>

        <!-- Количество репостов -->
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="425dp"
            android:alpha="0.7"
            android:src="@drawable/gray_reposts" />
        <TextView
            android:id="@+id/reposts_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="425dp"
            android:text="1234"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>